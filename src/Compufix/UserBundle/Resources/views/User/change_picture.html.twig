{% extends 'CompufixAdminBundle::layout.html.twig' %}
{% block title %}Mensajes{% endblock %}
{% block breadcrumb %}
<li> <a href="{{ path('adminbundle_main_index')}}">Administrador</a> <span class="divider">/</span></li>
<li> <a href="#">{{ 'message.bandeja_entrada' |trans({}, 'AdminBundle') }}</a> <span class="divider">/</span></li>
{% endblock %}

{% block javascript_custom %}
    <script src="{{ asset('js/compufixadmin/message/index.js') }}" type="text/javascript"></script>
{% endblock %}
{% block content %}
{% for flashMessage in app.session.flashbag.get('msg-success') %}
    <br>
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
     {{ flashMessage }}.
    </div>
    <br>						
{% endfor %}
{% for flashMessage in app.session.flashbag.get('msg-error') %}
    <br>
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">×</button>
   {{ flashMessage }}  
    </div>
    <br>						
{% endfor %}
<div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-user"></i> {{ 'message.cambiar_fotografia'|trans({}, 'AdminBundle') }}</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="control-group">
                    <form action="{{ path('account_change_picture_update',{'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                        <input type="hidden" name="_method" value="PUT" />
                        {{ form_widget(edit_form) }}
                        <div class="form-actions">
                            <button class="btn btn-primary" type="submit">{{ 'message.enviar'|trans({}, 'AdminBundle') }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}






